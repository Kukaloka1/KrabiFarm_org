@import "tailwindcss";

/* ====== Theme tokens (Tailwind v4) ====== */
@theme {
  --color-primary: #2563eb;
  --color-accent:  #00C7B1;
}

/* ====== Global tokens & utilities ====== */
:root{ --header-h:72px; }
html{ scroll-behavior:smooth; }
[id]{ scroll-margin-top: calc(var(--header-h) + 8px); }
body{ @apply bg-white text-gray-800 antialiased; }
.dark body{ @apply bg-neutral-950 text-neutral-100; }

.container-xl{ @apply max-w-7xl mx-auto px-4 sm:px-6 lg:px-8; }
.section{ @apply py-16 md:py-24; }
.btn{ @apply inline-flex items-center gap-2 px-5 py-3 rounded-xl font-semibold transition bg-primary text-white hover:opacity-90 active:opacity-80; }
